void solve(string ip, string op, vector <string> &v) {
        if(ip.size() == 1) {
            op.push_back(ip[0]);
            v.push_back(op);
            return;
        }
      string op1 = op, op2 = op;
      
      op1.push_back(ip[0]);
      op2.push_back(ip[0]);
      op2.push_back(' ');
      ip.erase(ip.begin() + 0);
      
      solve(ip, op1, v);
      solve(ip, op2, v);
      
      return;
      
    }

    vector <string> permutation(string S){
        vector <string> ans;
        solve(S, "", ans);
        reverse(ans.begin(), ans.end());
        
        return ans;
    }
